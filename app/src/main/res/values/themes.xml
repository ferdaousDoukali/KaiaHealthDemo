<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.KaiaHealthDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/light_pink</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/light_gray</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimarySurface">@color/red</item>
        <item name="colorOnPrimarySurface">@color/orange</item>
        <item name="colorOnSurface">@color/green</item>
        <item name="colorOnBackground">@color/yellow</item>
        <item name="colorControlNormal">@color/orange</item>
    </style>

    <style name="Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="SubTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Body" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
</resources>